<script>
  let cart = [];

  function addToCart(name, qty, price) {
    cart.push({ item: name, qty, price });
    alert(`${name} added!`);
  }

  function goToInvoice() {
    if (cart.length === 0) {
      alert("No products selected!");
      return;
    }
    localStorage.setItem('invoiceCart', JSON.stringify(cart));
    window.location.href = 'invoice.html';
  }
</script>

