<div class="invoice-container">
  <h2>Invoice Summary</h2>

  <div class="input-group">
    <input type="text" id="companyName" placeholder="Enter Your Company Name">
    <input type="text" id="clientName" placeholder="Enter Client Name">
  </div>

  <table id="invoiceTable">
    <thead>
      <tr><th>Item</th><th>Qty</th><th>Price</th><th>Total</th></tr>
    </thead>
    <tbody></tbody>
  </table>

  <div class="total" id="grandTotal">Total: ‚Çπ0.00</div>

  <div class="actions">
    <button onclick="window.location.href='index.html'">‚Üê Back to Products</button>
    <button onclick="printInvoice()">üñ®Ô∏è Print Invoice</button>
  </div>
</div>

<script>
  const cart = JSON.parse(localStorage.getItem('invoiceCart') || '[]');
  const tbody = document.querySelector('#invoiceTable tbody');
  let total = 0;

  cart.forEach(it => {
    const rowTotal = it.qty * it.price;
    total += rowTotal;
    const row = `
      <tr>
        <td>${it.item}</td>
        <td>${it.qty}</td>
        <td>‚Çπ${it.price.toFixed(2)}</td>
        <td>‚Çπ${rowTotal.toFixed(2)}</td>
      </tr>`;
    tbody.innerHTML += row;
  });

  document.getElementById('grandTotal').innerText = `Total: ‚Çπ${total.toFixed(2)}`;

  function printInvoice() {
    const company = document.getElementById('companyName').value || 'MyShop';
    const client = document.getElementById('clientName').value || 'Valued Client';

    let html = `
      <style>
        body { font-family: Arial; padding: 20px; }
        h2 { color: #6c63ff; }
        table { width: 100%; border-collapse: collapse; margin-top: 20px; }
        th, td { border: 1px solid #ddd; padding: 10px; text-align: center; }
        th { background: #6c63ff; color: white; }
        .footer { margin-top: 30px; text-align: center; color: #6c63ff; font-weight: bold; }
      </style>
      <h2>${company}</h2>
      <p><strong>Client:</strong> ${client}</p>
      <table>
        <tr><th>Item</th><th>Qty</th><th>Price</th><th>Total</th></tr>`;

    cart.forEach(it => {
      const rowTotal = it.qty * it.price;
      html += `<tr>
        <td>${it.item}</td>
        <td>${it.qty}</td>
        <td>‚Çπ${it.price.toFixed(2)}</td>
        <td>‚Çπ${rowTotal.toFixed(2)}</td>
      </tr>`;
    });

    html += `<tr><td colspan="3"><strong>Total</strong></td><td>‚Çπ${total.toFixed(2)}</td></tr></table>`;
    html += `<div class="footer">Thank you for your business!</div>`;

    const win = window.open('', '', 'width=800,height=600');
    win.document.write(html);
    win.print();
    win.close();
  }
</script>

</body>
